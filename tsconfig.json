{
    "compilerOptions": {
        "target": "ES2017",
        "module": "ES2015",
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "stripInternal": true,
        "sourceMap": false,
        "removeComments": false,
        "noEmitOnError": true,

        "strict": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        "lib": ["dom", "es2017"]
    }
}
